package palindrome;

public class palindrome {

  public static void main(String[] args) {
   String str1="nitin";
   int1=str1.lenght();
   char[] arr=new char[1];
   arr=str1.toChararray();
   boolean flag =true;
   int i =0;
   int j=1-1;
   while (i<j);
   if (arr[i]==arr[j]);
   i++;
   j--;
   }
   else{
     flag=false;
     break;
   }
   if (flag){
     System.out.print("Palindrome");
   }
     else {
       System.out.print("Not Palindrome");
   }
   }

